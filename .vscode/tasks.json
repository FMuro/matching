    "version": "2.0.0",
    "tasks": [
        {
            "label": "Build python package & reinstall",
            "type": "shell",
            "command": "rm -R dist && python3.12 -m build && pipx uninstall matching && pipx install dist/*.whl"
        },
        {
            "label": "Tests",
            "type": "shell",
            "command": "cd test && rm -r myfolder_matched ; matching -v -l names.txt -f myfolder && ls myfolder_matched && cd .."
        },
    ]
}